  "version": "0.2.0",
  "configurations": [
  {
    "name": "(Windows) Launch",
    "type": "cppvsdbg",
    "request": "launch",
    "program": "${workspaceFolder}/zig-out/bin/zngine",
    "stopAtEntry": false,
    "cwd": "${workspaceFolder}/zig-out/bin",
    "environment": [],
    "console": "externalTerminal",
    "preLaunchTask":"zngine build",
  },
    {
      "name": "(gdb) Launch",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/zig-out/bin/zngine",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/zig-out/bin",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "preLaunchTask":"zngine build",
      "setupCommands": [
          {
              "description": "Enable pretty-printing for gdb",
              "text": "-enable-pretty-printing",
              "ignoreFailures": true
          }
      ]
    }
  ]
}
