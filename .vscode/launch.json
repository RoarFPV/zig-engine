  "version": "0.2.0",
  "configurations": [
    {
      "name": "(gdb) Launch",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/zig-cache/bin/zngine",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/zig-cache/bin",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "preLaunchTask":"zngine build",
      "setupCommands": [
          {
              "description": "Enable pretty-printing for gdb",
              "text": "-enable-pretty-printing",
              "ignoreFailures": true
          }
      ]
    }
  ]
}
