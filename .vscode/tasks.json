{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "zig-engine build",
      "type":"shell",
      "command": "zig",
      "args": [
        "build",
        // "\"-Dtracy=true\"",
        // "-Dtracy-allocation=true",
        // "\"-Dtracy-callstack=true\"",
        // "\"-Doptimize=Debug\"",
        "\"-Doptimize=ReleaseFast\""
        // "\"-Doptimize=ReleaseSmall\""
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$gcc"
      ],
      "options": {}
    },
    {
      "label": "zig test",
      "type": "process",
      "command": "zig",
      "args": [
        "test",
        "${file}"
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "showReuseMessage": false,
        "clear": true
      }
    }
  ]
}