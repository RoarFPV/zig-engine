{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "zngine build",
      "type": "shell",
      "command": "zig",
      "args": ["build", "-Dtracy=false", "-Dtracy-allocation=false", "-Dtracy-callstack=false", "-Ddebug=false"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$gcc"
      ],
      "options": {
        
      }
    },
    {
      "label": "zig test",
      "type": "process",
      "command": "zig",
      "args": [
          "test",
          "${file}"
      ],
      "group": {
          "kind": "test",
          "isDefault": true
      },
      "presentation":{
          "showReuseMessage": false,
          "clear": true
      }
  }
  ]
}